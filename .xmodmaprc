! switch Escape and Caps_Lock for emacs
remove Lock = Caps_Lock
remove Control = Control_L
remove Shift = Shift_L
!keysym Control_L = Shift_L 
!keysym Shift_L = Caps_Lock
!keysym Caps_Lock = Control_L
keycode 0x42 = Shift_L 
keycode 0x32 = Control_L
keycode 0x25 = Caps_Lock
add Lock = Caps_Lock
add Control = Control_L
add Shift = Shift_L
remove Mod1 = Alt_R
keycode 0x6c = Super_R
add Mod4 = Super_R
